@model Inquire.Models.Category
@{
    ViewBag.Title = "Afisare categorie";
}


<h2>@ViewBag.Title</h2>

<br />

<p>@Model.CategoryName</p>


<form method="post" asp-controller="Categories" asp-action="Delete"
      asp-route-id="@Model.Id">

    <button class="btn btn-danger" type="submit">Sterge categoria</button>

</form>

<br />

<a class="btn btn-primary" href="/Categories/Index/">Afisare lista categorii</a>

