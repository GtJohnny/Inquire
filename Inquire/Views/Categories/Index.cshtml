@{
    ViewBag.Title = "Lista categorii";
}

<h4 class="text-xl-center">@ViewBag.Title</h4>
<br />

@if (TempData.ContainsKey("message"))
{
    <h1>@ViewBag.message</h1>
}

<br />
@foreach (Inquire.Models.Category category in ViewBag.Categories)
   {
            <div class="form-group card-body alert-success py-2 px-5 rounded2">
                <h3 class="text-md-center"><i class="bi bi-globe"></i> @category.CategoryName</h3>
            </div>
            <br />
            <div class="justify-content-between d-flex">
                <a class="btn alert-primary" asp-controller="Categories" asp-action="Show" asp-route-id="@category.Id">Afisare categorie</a>
                <a class="btn alert-secondary" asp-controller="Categories" asp-action="Edit" asp-route-id="@category.Id">Editare categorie</a>
                <form method="post" asp-controller="Categories" asp-action="Delete" asp-route-id="@category.Id">

                    <button class="btn alert-danger" type="submit">Sterge categoria</button>

                </form>
            </div>

            <br />
            <br />

}
<br />
<a class="btn btn-success" asp-controller="Categories" asp-action="New">Adauga o noua categorie</a>
<br />



