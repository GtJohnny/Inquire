@model Inquire.Models.Post
<h3 class ="text-center mt-5">Adaugare postare</h3>
<br/>
<div >
    <div class ="row">
        <div class="col-6 offset-3">

            <form method="post" asp-for="New" asp-controller="Posts">
                <div asp-validation-summary="All" class="text-danger container mt-5 border-info rounded border-2"></div>
                    <div class="form-group">
                        <label asp-for="Title" class="form-label text-center h5">Titlu Articol</label>
                        <br />
                        <input asp-for="Title" class="form-control"/>
                        <br/><br/>
                    </div>
                    <div class="form-group">
                    <label asp-for="Description" class="form-label text-center h5">Descriere postare</label>
                        <br/>
                        <textarea asp-for="Description" class="form-control summernote"></textarea>

                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <br />
                    <br />
                    <div class="form-group">
                    <label asp-for="CategoryId" class="text-center h5">Categorie </label>
                        <select asp-for="CategoryId" asp-items="Model.Categ" class="form-control">
                            <option value="">Selectati categoria</option>
                        </select> 
                        <span asp-validation-for="CategoryId" class="text-danger"></span>
                    </div>
                    <button class="btn btn-primary " type="submit">Adauga postare</button>
            </form>


        </div>
    </div>
</div>