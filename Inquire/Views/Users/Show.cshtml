@model Inquire.Models.ApplicationUser

<div class="card-body">
    <label asp-for="UserName" class="form-label text-center h4">Nume de utilizator</label>
    <h3 class=" card-title alert-info py-3 px-3 rounded-2">@Model.UserName  </h3>
     <label asp-for="Bio" class="form-label text-center h4">Bio</label>
    <div class="card-text alert-info py-3 px-3 rounded-2">@Html.Raw(Model.Bio)</div>

    <div class="d-flex justify-content-between flex-column mt-5">
        <div>
            <label asp-for="UserName" class="form-label  h4">Nume:</label>
            <div class=" card-title alert-info py-3 px-3 rounded-2"><i class="bi bi-person-fill"></i>@Model.LastName </div>
        </div>
        <div>
            <label asp-for="UserName" class="form-label  h4">Prenume:</label>
            <div class=" card-title alert-info py-3 px-3 rounded-2"><i class="bi bi-person-fill"></i>@Model.FirstName </div>
        </div>
        <div>
            <label asp-for="UserName" class="form-label  h4">Telefon:</label>
            <div class=" card-title alert-info py-3 px-3 rounded-2"><i class="bi bi-phone"></i>@Model.PhoneNumber </div>
        </div>
        <div>
            <label asp-for="UserName" class="form-label  h4">Email:</label>
            <div class=" card-title alert-info py-3 px-3 rounded-2"><i class="bi bi-mailbox"></i>@Model.Email </div>
        </div>

    </div>
    <br />
    <br />

    <div class="justify-content-between d-flex">
        <a class="btn alert-secondary" asp-controller="Users" asp-action="Edit" asp-route-id="@Model.Id">Editare utilizator</a>
        <form method="post" asp-controller="Users" asp-action="Delete" asp-route-id="@Model.Id">

            <button class="btn alert-danger" type="submit">Stergere utilizator</button>

        </form>
    </div>
</div>
