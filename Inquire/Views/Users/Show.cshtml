@model Inquire.Models.ApplicationUser

<div class="card-body">

    <h3 class=" card-title alert-success py-3 px-3 rounded-2">@Model.UserName  </h3>

    <div class=" card-text">@Html.Raw(Model.Bio)</div>

    <div class="d-flex justify-content-between flex-column mt-5">

        <div><i class="bi bi-globe"></i>@Model.LastName </div>
        <div><i class="bi bi-person"></i>@Model.FirstName </div>
        <div> <i class="bi bi-hand-thumbs-up"></i>@Model.PhoneNumber </div>

    </div>

    <div class="justify-content-between d-flex">
        <a class="btn alert-secondary" asp-controller="Users" asp-action="Edit" asp-route-id="@Model.Id">Editare utilizator</a>
        <form method="post" asp-controller="Users" asp-action="Delete" asp-route-id="@Model.Id">

            <button class="btn alert-danger" type="submit">Stergere utilizator</button>

        </form>
    </div>
</div>